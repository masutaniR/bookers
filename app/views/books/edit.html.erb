<body>
<h2>Editing Book</h2>
<%= form_with model: @book, url:book_path(@book.id), local:true do |f| %>

  <% if @book.errors.any? %>
  <div class="error-box">
    <div class="error-title">
    <%= @book.errors.count %> error prohibited this book from being saved:
    </div>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  </div>

  <p>Title</p>
  <%= f.text_field :title %>
  <p>Body</p>
  <%= f.text_area :body %><br>
  <%= f.submit 'Update Book' %><br>
  <div class="link">
    <%= link_to "Show", "/books/#{@book.id}" %> | <%= link_to "Back", "/books" %>
  </div>
<% end %>
</body>